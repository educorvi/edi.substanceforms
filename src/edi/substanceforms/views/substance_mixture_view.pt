<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="example.conference">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">

      <div class="container"
	   id="main-content"
	   tal:define="article view/article;
	               machines view/machines;
		       substances view/secsheet">

        <div class="row">
          <span class="col-12" tal:content="structure provider:plone.abovecontenttitle" />
        </div>

        <div class="row">

          <div class="col-lg-9 col-12">
            <div class="row">
              <div class="col-7">
                <h1 tal:content="python:article[1]"/>
              </div>
              <div class="col-5">
                <img class="img-fluid" tal:condition="view/image_url" tal:attributes="src view/image_url">
              </div>
            </div>
	    <!--<span tal:content="structure provider:plone.belowcontenttitle" />-->
            <p tal:condition="python:article[2]" class="lead mt-5">
              <img class="icon" src="++theme++plonetheme.siguv/icons/siguv/dot.svg">
              <span tal:content="python:article[2]"/>
            </p>
            <span tal:content="structure provider:plone.abovecontentbody" />

            <!-- TODO: Hier müssen alle anderen Attribute reingeschrieben werden -->
	    <section class="mt-3 mb-3">
	    <table class="table table-bordered">
	      <thead>
	        <th>Attribut</th>
		<th>Ausprägung</th>
	      </thead>
              <tbody>
	        <tr>
	          <td tal:condition="python: view.get_attr_translation('substance_types_new', article[5])">Typ des Wasch- und Reinigungsmittels</td>
	          <td tal:condition="python: view.get_attr_translation('substance_types_new', article[5])" tal:content="python: view.get_attr_translation('substance_types_new', article[5])"/>
	        </tr>
          <tr>
	          <td tal:condition="python:article[23]">Hersteller</td>
	          <td tal:condition="python:article[23]" tal:content="python:article[23]"/>
	        </tr>
          <tr>
	          <td tal:condition="python: view.get_attr_translation('branchen', article[4])">Branche</td>
            <td tal:condition="python: view.get_attr_translation('branchen', article[4])" tal:content="python: view.get_attr_translation('branchen', article[4])"/>
	        </tr>
          <tr>
	          <td tal:condition="python:article[10]">Verdampfungsfaktor 150 Grad</td>
	          <td tal:condition="python:article[10]" tal:content="python:article[10]"/>
	        </tr>
	        <tr>
	          <td tal:condition="python:article[11]">Verdampfungsfaktor 160 Grad</td>
	          <td tal:condition="python:article[11]" tal:content="python:article[11]"/>
	        </tr>
	        <tr>
	          <td tal:condition="python:article[12]">Verdampfungsfaktor 170 Grad</td>
	          <td tal:condition="python:article[12]" tal:content="python:article[12]"/>
	        </tr>
	        <tr>
	          <td tal:condition="python:article[13]">Verdampfungsfaktor 180 Grad</td>
	          <td tal:condition="python:article[13]" tal:content="python:article[13]"/>
	        </tr>
	        <tr>
	          <td tal:condition="python:article[14]">UEG in g/m3</td>
	          <td tal:condition="python:article[14]" tal:content="python:article[14]"/>
	        </tr>
	        <tr>
	          <td tal:condition="python:article[15]">Responsefaktor</td>
	          <td tal:condition="python:article[15]" tal:content="python:article[15]"/>
	        </tr>
	        <tr>
	          <td tal:condition="python: view.get_attr_translation('hskategorie', article[16])">Hautschutzmittelgruppe</td>
	          <td tal:condition="python: view.get_attr_translation('hskategorie', article[16])" tal:content="python: view.get_attr_translation('hskategorie', article[16])"/>
	        </tr>
	        <tr>
	          <td tal:condition="python:article[18]">Prüfdatum</td>
	          <td tal:condition="python:article[18]" tal:content="python:article[18]"/>
	        </tr>
          <!--
          <tr>
	          <td tal:condition="python: view.get_attr_translation('boolvocab', str(article[7]))">Sonderreiniger</td>
	          <td tal:condition="python: view.get_attr_translation('boolvocab', str(article[7]))" tal:content="python: view.get_attr_translation('boolvocab', str(article[7]))"/>
	        </tr>
	        -->
	        <tr>
	          <td tal:condition="python: view.get_attr_translation('boolvocab', str(article[17]))">Emissionsarmes Produkt</td>
	          <td tal:condition="python: view.get_attr_translation('boolvocab', str(article[17]))" tal:content="python: view.get_attr_translation('boolvocab', str(article[17]))"/>
	        </tr>
	        <tr>
	          <td tal:condition="python:article[19]">Flammpunkt</td>
	          <td tal:condition="python:article[19]" tal:content="python:article[19]"/>
	        </tr>
	        <tr>
	          <td tal:condition="python: view.get_attr_translation('boolvocab', str(article[20]))">Wertebereich für den Flammpunkt</td>
	          <td tal:condition="python: view.get_attr_translation('boolvocab', str(article[20]))" tal:content="python: view.get_attr_translation('boolvocab', str(article[20]))"/>
	        </tr>
	        <tr>
	          <td tal:condition="python:view.get_none_translation(article[21])">Bemerkungen</td>
	          <td tal:condition="python:view.get_none_translation(article[21])" tal:content="python:view.get_none_translation(article[21])"/>
	        </tr>
	        <tr>
	          <td tal:condition="python: view.usecase_translation(view.unbundle_list(article[9]))">Verwendungszwecke</td>
	          <td tal:condition="python: view.usecase_translation(view.unbundle_list(article[9]))" tal:content="python: view.usecase_translation(view.unbundle_list(article[9]))"/>
	        </tr>
          <tr>
	          <td tal:condition="python: view.application_areas_translation(view.unbundle_list(article[8]))">Anwendungsgebiete</td>
	          <td tal:condition="python: view.application_areas_translation(view.unbundle_list(article[8]))" tal:content="python: view.application_areas_translation(view.unbundle_list(article[8]))"/>
	        </tr>
          <!--
          <tr>
	          <td tal:condition="python:article[6]">Offset-Druckverfahren</td>
	          <td tal:condition="python:article[6]" tal:content="python:article[6]"/>
	        </tr>
	        -->
          <tr>
	          <td tal:condition="python:view.translate_recipes(view.get_recipes())">Bestandteile</td>
            <td tal:condition="python:view.translate_recipes(view.get_recipes())" tal:content="python:view.translate_recipes(view.get_recipes())"/>
          </tr>
	      </tbody>
	    </table>
	    </section>

            <section class="mt-3 mb-3" tal:condition="view/userCanEdit">
              <a class="btn btn-primary" tal:attributes="href python:context.absolute_url()+'/update-mixture-form?itemid=%s' % view.itemid" role="button">Artikel Bearbeiten</a>
            </section>

            <section class="mt-3 mb-3" tal:condition="view/userCanEdit">
              <a class="btn btn-primary" tal:attributes="href python:context.absolute_url()+'/delete-mixture-form?itemid=%s' % view.itemid" role="button">Artikel Löschen</a>
            </section>

            <section class="mt-3 mb-3">
              <a class="btn btn-primary" tal:attributes="href python:context.absolute_url()+'/create-ingredient-form?itemid=%s' % view.itemid" role="button">Bestandteil hinzufügen</a>
            </section>

            <section class="mt-3 mb-3">
              <a class="btn btn-primary" tal:attributes="href python:context.absolute_url()+'/delete-ingredients-form?itemid=%s' % view.itemid" role="button">Bestandteile löschen</a>
            </section>

            <section class="mt-3 mb-3">
              <a class="btn btn-primary" tal:attributes="href python:context.absolute_url()+'/update-mixture-manufacturer-form?itemid=%s' % view.itemid" role="button">Hersteller aktualisieren</a>
            </section>

          </div>

          <!-- Portlets -->
          <div class="col-lg-3 col-12">
            <div tal:replace="structure context/@@portlet-cards-view"/>
          </div>
          <!-- Ende Portlets -->

        </div>

        <div class="row">
          <span class="col-lg-9 col-12" tal:content="structure provider:nva.contentcards" />
        </div>

        <div class="row">
          <span class="col-lg-9 col-12" tal:content="structure provider:plone.belowcontentbody" />
        </div>

      </div>

    </tal:main-macro>
</metal:main>

</body>
</html>
