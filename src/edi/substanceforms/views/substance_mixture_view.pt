<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="example.conference">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">

      <div class="container"
	   id="main-content"
	   tal:define="article view/article;
	               machines view/machines;
		       substances view/secsheet">

        <div class="row">
          <span class="col-12" tal:content="structure provider:plone.abovecontenttitle" />
        </div>

        <div class="row">

          <div class="col-lg-9 col-12">
            <h1 tal:content="python:article[1]"/>
	    <!--<span tal:content="structure provider:plone.belowcontenttitle" />-->
            <p tal:condition="python:article[2]" class="lead mt-5">
              <img class="icon" src="++theme++plonetheme.siguv/icons/siguv/dot.svg">
              <span tal:content="python:article[2]"/>
            </p>
            <span tal:content="structure provider:plone.abovecontentbody" />

            <!-- TODO: Hier m체ssen alle anderen Attribute reingeschrieben werden -->
	    <section class="mt-3 mb-3">
	    <table class="table table-bordered">
	      <thead>
	        <th>Attribut</th>
		<th>Auspr채gung</th>
	      </thead>
              <tbody>
	        <tr>
	          <td>Typ des Wasch- und Reinigungsmittels</td>
	          <td tal:content="python: view.get_attr_translation('substance_types', article[5])"/>
	        </tr>
                <tr>
	          <td>Verdampfungsfaktor 150 Grad</td>
	          <td tal:content="python:article[10]"/>
	        </tr>
	        <tr>
	          <td>Verdampfungsfaktor 160 Grad</td>
	          <td tal:content="python:article[11]"/>
	        </tr>
	        <tr>
	          <td>Verdampfungsfaktor 170 Grad</td>
	          <td tal:content="python:article[12]"/>
	        </tr>
	        <tr>
	          <td>Verdampfungsfaktor 180 Grad</td>
	          <td tal:content="python:article[13]"/>
	        </tr>
	        <tr>
	          <td>UEG in g/m3</td>
	          <td tal:content="python:article[14]"/>
	        </tr>
	        <tr>
	          <td>Responsefaktor</td>
	          <td tal:content="python:article[15]"/>
	        </tr>
	        <tr>
	          <td>Hautschutzmittelgruppe</td>
	          <td tal:content="python: view.get_attr_translation('hskategorie', article[16])"/>
	        </tr>
	        <tr>
	          <td>Pr체fdatum</td>
	          <td tal:content="python:article[18]"/>
	        </tr>
	        <tr>
	          <td>Emissionsarmes Produkt</td>
	          <td tal:content="python: view.get_attr_translation('boolvocab', str(article[17]))"/>
	        </tr>
	        <tr>
	          <td>Flammpunkt</td>
	          <td tal:content="python:article[19]"/>
	        </tr>
	        <tr>
	          <td>Wertebereich f체r den Flammpunkt</td>
	          <td tal:content="python: view.get_attr_translation('boolvocab', str(article[20]))"/>
	        </tr>
	        <tr>
	          <td>Bemerkungen</td>
	          <td tal:content="python:article[21]"/>
	        </tr>
	        <tr>
	          <td>Verwendungszwecke</td>
	          <td tal:content="python:article[9]"/>
	        </tr>
	      </tbody>
	    </table>
	    </section>

            <section class="mt-3 mb-3" tal:condition="view/userCanEdit">
              <a class="btn btn-primary" tal:attributes="href view/userCanEdit" role="button">Artikel Bearbeiten</a>
            </section>

          </div>

          <!-- Portlets -->
          <div class="col-lg-3 col-12">
            <div tal:replace="structure context/@@portlet-cards-view"/>
          </div>
          <!-- Ende Portlets -->

        </div>

        <div class="row">
          <span class="col-lg-9 col-12" tal:content="structure provider:nva.contentcards" />
        </div>

        <div class="row">
          <span class="col-lg-9 col-12" tal:content="structure provider:plone.belowcontentbody" />
        </div>

      </div>

    </tal:main-macro>
</metal:main>

</body>
</html>
